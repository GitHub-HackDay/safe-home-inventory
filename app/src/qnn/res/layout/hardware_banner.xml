<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hardwareBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FF6F00"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ POWERED BY"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/hardwareInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualcomm Hexagon NPU"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/inferenceTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inference: ~15ms"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:layout_marginTop="4dp"
            android:alpha="0.9" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
